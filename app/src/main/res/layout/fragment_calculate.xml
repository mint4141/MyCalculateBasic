<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!--Toolbar-->
    <!-- actionBarSize สูงเหมาะเท่ากับแต่ละอุปกรณ์
    @style/ThemeOverlay.AppCompat.ActionBar โทรสว่าง  ตัวอักษร ดำ
    @style/ThemeOverlay.AppCompat.ActionBarDrak โทนมืด ตัวอักษร ขาว-->
     <android.support.v7.widget.Toolbar
         android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
         android:background="@color/colorPrimary"
         android:layout_width="match_parent"
         android:layout_height="?attr/actionBarSize"/>

     <!--Content-->
    <LinearLayout
        android:background="#b4ffffff"
        android:padding="15dp"
        android:layout_margin="40dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!--Money-->
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--Icon-->
            <ImageView
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_action_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <!--TextField-->
            <EditText
                android:inputType="numberDecimal"
                android:hint="Money in USD :"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <!--Exchange Button-->
        <Button
            android:text="Exchange"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</LinearLayout>